<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_info_bg"
        android:duplicateParentState="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/a_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/a_person_name_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="160dp"
            android:layout_marginRight="160dp"
            android:text="Ranjan Parajuli"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a_profile_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ic_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_date_white"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Date -"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_person_name_" />

        <TextView
            android:id="@+id/ic_time"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="116dp"
            android:layout_marginLeft="116dp"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Time:"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_date" />

        <TextView
            android:id="@+id/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_marginLeft="116dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_phone_white"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="+977 -"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_time"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/a_indicater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Accepted"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/a_book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Jan 4, 2019"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/ic_date"
            app:layout_constraintTop_toBottomOf="@+id/a_person_name_" />

        <TextView
            android:id="@+id/a_book_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:text="6AM -7AM"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/ic_time"
            app:layout_constraintTop_toBottomOf="@+id/a_book_date" />

        <TextView
            android:id="@+id/a_book_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="9813309999"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/ic_phone"
            app:layout_constraintTop_toBottomOf="@+id/a_book_time" />



    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>