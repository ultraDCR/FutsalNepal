<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/br_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_info_bg"
        android:duplicateParentState="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/a_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/a_person_name_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Ranjan Parajuli"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/a_profile_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_phone_white_15dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="+977 - "
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/a_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/a_book_date" />

        <TextView
            android:id="@+id/a_indicater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Accepted"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_book_phone" />

        <TextView
            android:id="@+id/a_book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_date_white"
            android:drawablePadding="8dp"
            android:text="Jan 4, 2019"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/a_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/a_person_name_" />

        <TextView
            android:id="@+id/a_book_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_time_white_15dp"
            android:drawablePadding="8dp"
            android:text="6AM -7AM"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/a_book_date"
            app:layout_constraintTop_toTopOf="@+id/a_book_date" />

        <TextView
            android:id="@+id/a_book_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9813309999"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ic_phone"
            app:layout_constraintTop_toTopOf="@+id/ic_phone" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>